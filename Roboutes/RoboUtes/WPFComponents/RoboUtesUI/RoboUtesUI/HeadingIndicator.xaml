<UserControl x:Class="RoboUtes.HeadingIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoboUtes"
             xmlns:properties="clr-namespace:RoboUtes.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">
    <Viewbox Stretch="Fill">
        <Grid Height="200" Width="600">
            <Grid.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Red"/>
                    <GradientStop Offset="0.29"/>
                    <GradientStop Color="#CCFF0000" Offset="0.227"/>
                </LinearGradientBrush>
            </Grid.OpacityMask>
            <Grid HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="600" Margin="0,29,0,-29">
                <Image x:Name="digitsImage" Source="{Binding Source={x:Static properties:Resources.compass}}" Width="600" Height="600" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,-400" VerticalAlignment="Bottom"/>
            </Grid>
            <Polygon Points="20,20 0,0 40,0" Stroke="Red" Fill="Red" Margin="281,5,279,171" />
        </Grid>
    </Viewbox>
</UserControl>
